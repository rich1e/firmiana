{
  "name": "firmiana",
  "version": "1.0.0",
  "description": "",
  "main": "index.js",
  "scripts": {
    "prepare": "husky install",
    "preinstall": "npx only-allow pnpm",
    "commit": "npx git-cz",
    "docs:dev": "pnpm --filter=docs docs:dev",
    "docs:clean": "pnpm --filter=docs docs:clean",
    "docs:build": "pnpm --filter=docs docs:build",
    "docs:serve": "pnpm --filter=docs docs:serve",
    "lint:lint-staged": "lint-staged",
    "lint:eslint": "eslint --fix --cache \"**/*.{js,jsx,ts,tsx,vue}\"",
    "lint:stylelint": "stylelint --fix --cache \"**/*.{css,scss,less,styl,vue}\"",
    "lint:prettier": "prettier --write  \"**/*.{css,scss,less,styl,js,jsx,ts,tsx,vue}\"",
    "version-packages": "changeset version",
    "release": "pnpm --recursive --stream build && changeset publish"
  },
  "keywords": [],
  "author": "rich1e",
  "license": "ISC",
  "devDependencies": {
    "@changesets/changelog-github": "^0.4.8",
    "@changesets/cli": "^2.26.0",
    "@commitlint/cli": "^17.4.2",
    "@commitlint/config-conventional": "^17.4.2",
    "@firmiana/eslint-config": "workspace:*",
    "@firmiana/stylelint-config": "workspace:*",
    "commitizen": "^4.3.0",
    "cz-conventional-changelog": "^3.3.0",
    "eslint": "^8.0.1",
    "husky": "^8.0.3",
    "lint-staged": "^13.1.0",
    "postcss": "^8.4.21",
    "prettier": "^2.8.3",
    "stylelint": "^14.16.1",
    "typescript": "^4.9.4"
  }
}
