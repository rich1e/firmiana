// https://github.com/element-plus/element-plus/blob/dev/tsconfig.base.json
// https://github.com/microsoft/TypeScript/blob/main/src/tsconfig-base.json
{
  "compilerOptions": {
    "outDir": "dist",
    "target": "es2018",
    "module": "esnext",
    "baseUrl": ".",
    "sourceMap": false,
    "moduleResolution": "node",
    "allowJs": false,
    "strict": true,
    "noUnusedLocals": true,
    "resolveJsonModule": true,
    "allowSyntheticDefaultImports": true,
    "esModuleInterop": true,
    "removeComments": false,
    "rootDir": ".",
    "types": [],
    "paths": {
      "@firmiana/*": ["packages/*"]
    }
  }
}
